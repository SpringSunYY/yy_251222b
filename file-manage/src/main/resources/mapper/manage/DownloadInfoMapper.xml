<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.DownloadInfoMapper">

    <resultMap type="DownloadInfo" id="DownloadInfoResult">
        <result property="id" column="id"/>
        <result property="fileTypeId" column="file_type_id"/>
        <result property="fileTypeName" column="file_type_name"/>
        <result property="fileId" column="file_id"/>
        <result property="fileName" column="file_name"/>
        <result property="fileType" column="file_type"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileUrl" column="file_url"/>
        <result property="remark" column="remark"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectDownloadInfoVo">
        select id,
               file_type_id,
               file_type_name,
               file_id,
               file_name,
               file_type,
               file_size,
               file_url,
               remark,
               user_id,
               create_time
        from tb_download_info
    </sql>

    <select id="selectDownloadInfoList" parameterType="DownloadInfo" resultMap="DownloadInfoResult">
        <include refid="selectDownloadInfoVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="fileTypeName != null  and fileTypeName != ''">and file_type_name like concat('%', #{fileTypeName},
                '%')
            </if>
            <if test="fileName != null  and fileName != ''">and file_name like concat('%', #{fileName}, '%')</if>
            <if test="fileType != null  and fileType != ''">and file_type = #{fileType}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
    </select>

    <select id="selectDownloadInfoById" parameterType="Long" resultMap="DownloadInfoResult">
        <include refid="selectDownloadInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertDownloadInfo" parameterType="DownloadInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_download_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileTypeId != null">file_type_id,</if>
            <if test="fileTypeName != null and fileTypeName != ''">file_type_name,</if>
            <if test="fileId != null">file_id,</if>
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="fileType != null and fileType != ''">file_type,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="fileUrl != null">file_url,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileTypeId != null">#{fileTypeId},</if>
            <if test="fileTypeName != null and fileTypeName != ''">#{fileTypeName},</if>
            <if test="fileId != null">#{fileId},</if>
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="fileType != null and fileType != ''">#{fileType},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="fileUrl != null">#{fileUrl},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
                <if test="fileUrl != null">#{fileUrl},</if></insert>

    <update id="updateDownloadInfo" parameterType="DownloadInfo">
        update tb_download_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="fileTypeId != null">file_type_id = #{fileTypeId},</if>
            <if test="fileTypeName != null and fileTypeName != ''">file_type_name = #{fileTypeName},</if>
            <if test="fileId != null">file_id = #{fileId},</if>
            <if test="fileName != null and fileName != ''">file_name = #{fileName},</if>
            <if test="fileType != null and fileType != ''">file_type = #{fileType},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="fileUrl != null">file_url = #{fileUrl},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDownloadInfoById" parameterType="Long">
        delete
        from tb_download_info
        where id = #{id}
    </delete>

    <delete id="deleteDownloadInfoByIds" parameterType="String">
        delete from tb_download_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
